<body>
  <div class="container">
    <main class="content">
      <div class="wrapper">
        <h1 class="welcomeMessage">Welcome to Connect</h1>
        <form action="/auth/signup" method="post">
          <div class="signUpWithEmail">
            <input type="text" placeholder="Email">
            <input type="text" placeholder="Password">
            <input type="submit" value="Sign up with email">
          </div>
          <span class="or">OR</span>
          <div class="signUpWithOther">
            <button>
              <a href=""><img src="/images\Depth 7, Frame 0.png" alt="">Continue with Apple</a>
            </button>
            <button>
              <a href=""><img src="/images\Group.png" alt="">Continue with Google</a>
            </button>
            <button>
              <a href=""><img src="/images\Depth 6, Frame 0 (1).png" alt="">Continue with Facebook</a>
            </button>
          </div>
          <div class="alreadyHaveanAccount">
            <span>Already have an account?</span>
            <a href="/auth/login">Log in</a>
          </div>
        </form>
      </div>
    </main>
  </div>
</body>